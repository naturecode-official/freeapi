#!/bin/bash

# FreeAPI Reliable One-Click Installer
# Fixes the npm link temporary directory issue
# Usage: curl -fsSL https://raw.githubusercontent.com/naturecode-official/freeapi/main/install-freeapi | bash

set -e

echo "FreeAPI Reliable Installer"
echo "=========================="
echo "Fixing npm link issue permanently"
echo

# Check Node.js
if ! command -v node &> /dev/null; then
    echo "ERROR: Node.js not detected"
    echo "Please install Node.js v18+: https://nodejs.org/"
    exit 1
fi

# Check npm
if ! command -v npm &> /dev/null; then
    echo "ERROR: npm not detected"
    exit 1
fi

# Check Node.js version
NODE_VERSION=$(node --version | cut -d'v' -f2)
MAJOR_VERSION=$(echo $NODE_VERSION | cut -d'.' -f1)
if [ "$MAJOR_VERSION" -lt 18 ]; then
    echo "ERROR: Node.js version too low (requires v18+, found v$NODE_VERSION)"
    exit 1
fi

echo "System check passed"
echo "   Node.js: v$NODE_VERSION"
echo "   npm: $(npm --version)"
echo

# Get npm global prefix
NPM_PREFIX=$(npm config get prefix)
NPM_BIN="$NPM_PREFIX/bin"
NPM_LIB="$NPM_PREFIX/lib/node_modules"

echo "npm global prefix: $NPM_PREFIX"
echo

# Method 1: Install from current directory if available
if [ -f "$HOME/Desktop/freeapi/package.json" ]; then
    echo "Found local FreeAPI at ~/Desktop/freeapi"
    cd "$HOME/Desktop/freeapi"
    
    echo "   Installing dependencies..."
    npm install --silent
    
    echo "   Building project..."
    npm run build --silent
    
    echo "   Creating global link..."
    npm unlink -g freeapi 2>/dev/null || true
    npm link --silent
    
    echo "✅ Installed from local directory"
    
else
    # Method 2: Download and install to permanent location
    echo "Downloading FreeAPI..."
    INSTALL_DIR="$HOME/.freeapi-permanent"
    mkdir -p "$INSTALL_DIR"
    
    if command -v git &> /dev/null; then
        echo "   Cloning repository..."
        if [ -d "$INSTALL_DIR/freeapi" ]; then
            cd "$INSTALL_DIR/freeapi"
            git pull --quiet
        else
            git clone --depth 1 https://github.com/naturecode-official/freeapi.git "$INSTALL_DIR/freeapi"
            cd "$INSTALL_DIR/freeapi"
        fi
    else
        echo "   Downloading with curl..."
        cd "$INSTALL_DIR"
        curl -L https://github.com/naturecode-official/freeapi/archive/refs/heads/main.tar.gz -o freeapi.tar.gz
        tar -xzf freeapi.tar.gz --strip-components=1
        rm -f freeapi.tar.gz
    fi
    
    echo "   Installing dependencies..."
    npm install --silent
    
    echo "   Building project..."
    npm run build --silent
    
    echo "   Creating global link..."
    npm unlink -g freeapi 2>/dev/null || true
    npm link --silent
    
    echo "✅ Installed to permanent directory: $INSTALL_DIR"
fi

# Method 3: Create direct executable as backup
echo ""
echo "Creating backup executable..."
cat > "$NPM_BIN/freeapi-direct" << 'EOF'
#!/bin/bash
DIR="$HOME/.freeapi-permanent/freeapi"
if [ ! -d "$DIR" ]; then
    DIR="$HOME/Desktop/freeapi"
fi
if [ ! -d "$DIR" ]; then
    echo "Error: FreeAPI not found"
    exit 1
fi
node "$DIR/dist/index.js" "$@"
EOF

chmod +x "$NPM_BIN/freeapi-direct"

# Also create symlink
ln -sf "$NPM_BIN/freeapi-direct" "$NPM_BIN/freeapi" 2>/dev/null || true

echo ""
echo "Installation complete!"
echo ""
echo "You can now use:"
echo "  freeapi --help"
echo "  freeapi-direct --help  (backup command)"
echo ""
echo "If 'freeapi' still doesn't work, try:"
echo "  1. Restart your terminal"
echo "  2. Run: source ~/.zshrc  (or ~/.bashrc)"
echo "  3. Use: freeapi-direct  (always works)"
echo ""
echo "To verify installation:"
echo "  which freeapi"
echo "  ls -la $NPM_BIN/freeapi*"