#!/bin/bash

# FreeAPI One-Click Installer (Fixed Version)
# Installs from GitHub source to permanent location
# Usage: curl -fsSL https://raw.githubusercontent.com/naturecode-official/freeapi/main/install-freeapi | bash

set -e

echo "FreeAPI One-Click Installer (Fixed)"
echo "==================================="
echo "Installing from GitHub source to permanent location"
echo

# Check Node.js
if ! command -v node &> /dev/null; then
    echo "ERROR: Node.js not detected"
    echo "Please install Node.js v18+: https://nodejs.org/"
    exit 1
fi

# Check npm
if ! command -v npm &> /dev/null; then
    echo "ERROR: npm not detected"
    exit 1
fi

# Check Node.js version
NODE_VERSION=$(node --version | cut -d'v' -f2)
MAJOR_VERSION=$(echo $NODE_VERSION | cut -d'.' -f1)
if [ "$MAJOR_VERSION" -lt 18 ]; then
    echo "ERROR: Node.js version too low (requires v18+, found v$NODE_VERSION)"
    exit 1
fi

echo "System check passed"
echo "   Node.js: v$NODE_VERSION"
echo "   npm: $(npm --version)"
echo

# Create permanent installation directory
INSTALL_DIR="$HOME/.freeapi-install"
echo "Installing FreeAPI to: $INSTALL_DIR"
mkdir -p "$INSTALL_DIR"

# Download from GitHub
echo "Downloading FreeAPI from GitHub..."
if command -v git &> /dev/null; then
    echo "   Cloning repository with git..."
    if [ -d "$INSTALL_DIR/freeapi" ]; then
        cd "$INSTALL_DIR/freeapi"
        git pull --quiet
    else
        git clone --depth 1 https://github.com/naturecode-official/freeapi.git "$INSTALL_DIR/freeapi"
    fi
else
    echo "   Downloading with curl..."
    curl -L https://github.com/naturecode-official/freeapi/archive/refs/heads/main.tar.gz -o "$INSTALL_DIR/freeapi.tar.gz"
    tar -xzf "$INSTALL_DIR/freeapi.tar.gz" -C "$INSTALL_DIR" --strip-components=1
    rm -f "$INSTALL_DIR/freeapi.tar.gz"
fi

cd "$INSTALL_DIR/freeapi"

echo "   Installing dependencies..."
npm install --silent

echo "   Building project..."
npm run build --silent

echo "   Creating global link..."
# Remove any existing link
npm unlink -g freeapi 2>/dev/null || true
# Create new link
npm link --silent

echo
echo "Installation complete!"
echo
echo "Usage:"
echo "  freeapi --help     Show help"
echo "  freeapi init       Initialize configuration"
echo "  freeapi list       List available services"
echo
echo "Quick start:"
echo "  1. freeapi init"
echo "  2. freeapi config chatgpt"
echo "  3. freeapi chat chatgpt"
echo
echo "Installation directory: $INSTALL_DIR/freeapi"
echo "GitHub: https://github.com/naturecode-official/freeapi"
echo "Issues: https://github.com/naturecode-official/freeapi/issues"
echo
echo "To update FreeAPI, run this installer again."