# Skip optional dependencies to speed up installation
optional=false

# Don't fund messages
fund=false

# Don't show audit messages (security checks still run)
audit=false

# Use latest package versions within semver ranges
save-exact=false

# Use npm's default registry
registry=https://registry.npmjs.org/

# Set engine-strict to false to avoid warnings
engine-strict=false

# Cache location
cache=${HOME}/.npm

# Log level
loglevel=error